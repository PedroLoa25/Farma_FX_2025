<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pe.edu.upeu.farmafx.control.RegistroController">
    <children>
        <Label layoutX="78.0" layoutY="54.0" text="Crear Nueva Cuenta">
            <font>
                <Font name="System Bold" size="20.0" />
            </font>
        </Label>
        <Label layoutX="60.0" layoutY="116.0" text="DNI:" />
        <TextField fx:id="dniTextField" layoutX="60.0" layoutY="133.0" prefWidth="230.0" promptText="Ingrese su DNI de 8 dígitos" />
        <Label layoutX="60.0" layoutY="179.0" text="Contraseña:" />
        <PasswordField fx:id="clavePasswordField" layoutX="60.0" layoutY="196.0" prefWidth="230.0" promptText="Más de 8 caracteres, letras y números" />
        <Label layoutX="60.0" layoutY="243.0" text="Confirmar Contraseña:" />
        <PasswordField fx:id="confirmarClavePasswordField" layoutX="60.0" layoutY="260.0" prefWidth="230.0" promptText="Repita su contraseña" />
        <Button fx:id="registrarButton" layoutX="137.0" layoutY="313.0" onAction="#registrarAccion" text="Registrarse" />
        <Label fx:id="mensajeLabel" alignment="CENTER" layoutX="25.0" layoutY="350.0" prefWidth="300.0" textAlignment="CENTER" wrapText="true" />
        <Button layoutX="14.0" layoutY="14.0" onAction="#volverAlLoginAccion" text="← Volver" />
    </children>
</AnchorPane>